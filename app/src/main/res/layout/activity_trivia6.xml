<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guessme.guessme.Trivia.Trivia6"
    android:background="@drawable/t6"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/trivia"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="The average time it takes for plastic to decompose is 450 years. Glass takes 4,000 years!"
        android:textColor="@color/colorAccent"
        android:textSize="28dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Trivia6Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/border"
        android:textColor="#fff"
        android:text="Back"/>

</LinearLayout>
