<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guessme.guessme.MainMenu"
    android:background="@drawable/main"
    android:orientation="vertical"
    android:gravity="center">

        <Button
            android:id="@+id/btnplay"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/play1" />

        <TextView
            android:id="@+id/txtPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play"/>
        <Button
            android:id="@+id/btntnc"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/tnc1"
            />
        <TextView
            android:id="@+id/txtTNC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms and \nConditions"/>

        <Button
            android:id="@+id/btnscores"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="25dp"

            android:background="@drawable/trophy"
            />
        <TextView
            android:id="@+id/txtScores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scores"/>

        <Button

            android:id="@+id/btnexit"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/exit1" />

        <TextView
            android:id="@+id/txtExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="Exit"/>

</LinearLayout>
