<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guessme.guessme.Math.MathDifficulty"
    android:orientation="vertical"
    android:background="@drawable/bgdifficulty"
    android:gravity="center"
    >

    <Button
        android:id="@+id/beginnerm"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:background="@drawable/btnbeginner"/>

    <Button
        android:id="@+id/intermediatem"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/lockinter" />

    <Button
        android:id="@+id/expertm"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:background="@drawable/lockexpert"/>
    <Button
        android:id="@+id/back"
        android:layout_width="105dp"
        android:layout_height="32dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/techbtn"
        android:text="BACK" />
</LinearLayout>
