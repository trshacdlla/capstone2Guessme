<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guessme.guessme.Trivia.Trivia5"
    android:background="@drawable/t5"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/trivia"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="There are only four words in the English language which end in 'dous': tremendous, horrendous, stupendous, and hazardous."
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="150dp"
        />

    <Button
        android:id="@+id/Trivia5Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/bborder"
        android:textColor="#fff"
        android:text="Back"/>

</LinearLayout>
