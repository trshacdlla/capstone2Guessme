<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.guessme.guessme.Science.ScienceB4"
    android:weightSum="1"
    android:background="@drawable/s4">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:text="Score: "
            android:textAlignment="textEnd"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/sb4score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:visibility="invisible" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Level 1"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="35sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/sb4Timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="50sp"
        />

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/sb4questionNumber"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:text="1. "
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/sb4question"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:text="Questions"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textStyle="bold"

            android:textSize="30dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/sb4ans1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/mathbutton"
        android:text="A. "
        android:textSize="22sp" />

    <Button
        android:id="@+id/sb4ans2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="25dp"
        android:text="B. "
        android:textSize="22sp"
        android:background="@drawable/mathbutton"/>

    <Button
        android:id="@+id/sb4ans3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="25dp"
        android:text="C. "
        android:textAlignment="center"
        android:textSize="22sp"
        android:background="@drawable/mathbutton"/>

</LinearLayout>
