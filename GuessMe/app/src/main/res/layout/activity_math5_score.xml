<?xml version="1.0" encoding="utf-8"?>
<com.luolc.emojirain.EmojiRainLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guessme.guessme.Math.Math5Score"
    android:orientation="vertical"
    android:background="@drawable/score"
    android:id="@+id/math5activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/MT5name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="name"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/MT5Congrats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Congratulation!!!"
            android:textAlignment="center"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level 5"
            android:textAlignment="center"
            android:textSize="25dp" />

        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/MT5score"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:layout_x="83dp"
                android:layout_y="21dp"
                android:background="@drawable/tscore"
                android:paddingTop="90dp"
                android:text="0000"
                android:textAlignment="center"
                android:textSize="40sp" />
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="271dp"
                android:layout_y="215dp"
                android:text="Correct"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="156dp"
                android:layout_y="218dp"
                android:text="Score"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="33dp"
                android:layout_y="215dp"
                android:text="Wrong"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/MT5mistake"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_marginTop="25dp"
                android:layout_x="8dp"
                android:layout_y="122dp"
                android:background="@drawable/wrong"
                android:padding="23dp"
                android:text="00"
                android:textAlignment="center"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/MT5correct"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="25dp"
                android:layout_x="247dp"
                android:layout_y="120dp"
                android:background="@drawable/correct"
                android:padding="23dp"
                android:text="00"
                android:textAlignment="center"
                android:textSize="50sp" />

        </AbsoluteLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of tries: " />

            <TextView
                android:id="@+id/MT5try"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="0" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/MT5retry"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/border"
                android:text="Home"
                android:textColor="#fff" />

            <Button
                android:id="@+id/MT5Stats"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:background="@drawable/border"
                android:text="Statistics"
                android:textColor="#fff" />

            <Button
                android:id="@+id/MT5next"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="@drawable/border"
                android:text="Next"
                android:textColor="#fff" />
        </LinearLayout>

    </LinearLayout>

</com.luolc.emojirain.EmojiRainLayout>

